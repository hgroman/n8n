# n8n Windows Production Environment Configuration
# Copy this file to .env and update with your actual values

# Basic Authentication
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_secure_password_here

# Domain Configuration
N8N_DOMAIN=n8n.improvemyrankings.com

# Database Configuration (SQLite is default, but you can switch to PostgreSQL for production)
DB_TYPE=sqlite
# For PostgreSQL (uncomment and configure if needed):
# DB_TYPE=postgresdb
# DB_POSTGRESDB_HOST=localhost
# DB_POSTGRESDB_PORT=5432
# DB_POSTGRESDB_DATABASE=n8n
# DB_POSTGRESDB_USER=n8n
# DB_POSTGRESDB_PASSWORD=your_db_password

# Security Settings
N8N_SECURE_COOKIE=true
N8N_ENCRYPTION_KEY=your_32_character_encryption_key_here

# Performance Settings
N8N_DEFAULT_WEBHOOK_TIMEOUT=120000
N8N_TIMEOUT_THRESHOLD=300
N8N_RUNNERS_ENABLED=true

# Logging
N8N_LOG_LEVEL=info
N8N_LOG_OUTPUT=console,file
N8N_LOG_FILE_LOCATION=C:\n8n-production\logs\n8n.log

# Email Settings (if using SMTP)
# N8N_EMAIL_MODE=smtp
# N8N_SMTP_HOST=your_smtp_host
# N8N_SMTP_PORT=587
# N8N_SMTP_USER=your_smtp_user
# N8N_SMTP_PASS=your_smtp_password
# N8N_SMTP_SENDER=noreply@improvemyrankings.com
